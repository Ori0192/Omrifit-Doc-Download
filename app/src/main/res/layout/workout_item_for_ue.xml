<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:background="@color/blueblack"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_day_for_ue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout day"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_copy_workout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="clip_horizontal|right"
                    android:layout_marginStart="170dp"
                    tools:layout_gravity="end"
                    tools:srcCompat="@drawable/baseline_content_copy_24" />

            </LinearLayout>


            <TextView
                android:id="@+id/et_workout_name_for_ue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:visibility="visible" />

            <ListView
                android:id="@+id/lv_for_ue"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_workout_type_for_ue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
